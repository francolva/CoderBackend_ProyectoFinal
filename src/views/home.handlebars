<html>
	<head>
		<title>Home</title>
		<script src="/js/home.js"></script>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
			crossorigin="anonymous"
		/>
		<link rel="stylesheet" href="/css/common.css" />
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
		/>
	</head>
	<body>
		<div class="container-md text-center p-5">
			<h1>Productos</h1>
			<div class="container-sm w-50 p-3">
				<div class="container-sm align-items-center text-center">
					<ul class="container list-group w-50" id="realTimeList">
						{{#each products}}
							<li class="list-group-item">{{this.title}}</li>
						{{/each}}
					</ul>
				</div>
			</div>
		</div>
		<header class="header">
			<nav
				class="navbar navbar-expand-lg bg-white sticky-top navbar-light p-3 shadow-sm"
			>
				<div class="container">
					<a class="navbar-brand" href="#">
						<strong>Backend</strong></a>
					<button
						class="navbar-toggler"
						type="button"
						data-bs-toggle="collapse"
						data-bs-target="#navbarNavDropdown"
						aria-controls="navbarNavDropdown"
						aria-expanded="false"
						aria-label="Toggle navigation"
					>
						<span class="navbar-toggler-icon"></span>
					</button>
					<div
						class="collapse navbar-collapse"
						id="navbarNavDropdown"
					>

						<ul class="navbar-nav ms-auto">
							<li class="nav-item">
								<a
									class="nav-link mx-2 text-uppercase active"
									aria-current="page"
									href="/products"
								>Productos</a>
							</li>
							{{#if user.isAdmin}}
								<li class="nav-item">
									<a
										class="nav-link mx-2 text-uppercase"
										href="/admin"
									>Dashboard</a>
								</li>
							{{/if}}
							{{#unless user.isAdmin}}
								<li class="nav-item">
									<a
										class="nav-link mx-2 text-uppercase"
										href="/chat"
									>Chat</a>
								</li>
							{{/unless}}
							{{#if user.hasAdvancedRights}}
								<li class="nav-item">
									<a
										class="nav-link mx-2 text-uppercase"
										href="/realtimeproducts"
									>Crear productos</a>
								</li>
							{{/if}}
						</ul>
						<ul class="navbar-nav ms-auto">
							<li class="nav-item">
								<a
									class="nav-link mx-2 text-uppercase"
									href="/carts/{{user.cart}}"
								><i class="bi-cart-fill"></i>
									Carrito</a>
							</li>
							<li class="nav-item">
								<a
									class="nav-link mx-2 text-uppercase"
									href="/"
								><i class="bi-person-circle"></i>
									Cuenta</a>
							</li>
							<li class="nav-item">
								<button
									class="nav-link mx-2 text-uppercase"
									id="logout-button"
								>Cerrar sesi√≥n</button>
							</li>
						</ul>
					</div>
				</div>
			</nav>
			<div id="line-below">
			</div>
		</header>
	</body>
</html>