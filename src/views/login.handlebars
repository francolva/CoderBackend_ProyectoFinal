<html>
	<head>
		<title>Login</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
			crossorigin="anonymous"
		/>
		<link rel="stylesheet" href="/css/common.css" />
	</head>
	<body>
		<div class="container text-center">
			<h1>Login</h1>
			<div class="container row">
				<div class="col">
					<h3>Ingrese con su usuario</h3>
					<form
						class="p-4 p-md-5 border rounded-3 bg-body-tertiary"
						action=""
						id="loginForm"
					>
						<div class="form-floating mb-3 mt-3">
							<input
								type="text"
								class="form-control"
								id="email"
								placeholder="Ingrese su correo electrónico"
								name="email"
							/>
							<label for="email">
								Correo electrónico
							</label>
						</div>

						<div class="form-floating mb-3 mt-3">
							<input
								type="password"
								class="form-control"
								id="password"
								placeholder="Ingrese su contraseña"
								name="password"
							/>
							<label for="password">
								Contraseña
							</label>
						</div>
						<div class="form-floating mb-3">
							<button
								class="w-100 btn btn-lg btn-success"
								form="loginForm"
							>Enviar</button>
						</div>
					</form>
					<div class="container mb-3 mt-3">
						<p class="text-light">¿Aún no está registrado?
							<a class="text-reset" href="/register">Regístrese
								aquí</a></p>
						<p class="text-light">¿Olvidó su contraseña?
							<a
								class="text-reset"
								href="/forgotpassword"
							>Recuperar contraseña</a></p>
					</div>

					<a href="/api/sessions/github"><button
							class="w-100 btn btn-lg btn-success"
						>Ingresar con Github</button></a>
				</div>
				<div class="col">
				</div>
			</div>
		</div>
		<script src="/js/login.js"></script>
	</body>
</html>